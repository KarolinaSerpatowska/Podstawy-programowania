#include <stdio.h>
#include <stdlib.h>

//min srednia

int main()
{
    int n;
    scanf("%d", &n);
    float *tab=malloc(n*sizeof(float*));
    int i;
    for (i=0;i<n;i++)
    {
        scanf("%f",tab+i);
    }
    float suma=0, max;
    for (i=0; i<n;i++)
    {
        suma=suma+*(tab+i);
        if (i==0) max = *tab;
        else if (*(tab+i)>max)
        {
            max =*(tab+i);
        }
        
    }
    printf ("%f\n", suma);
    printf ("%f", max);
    
    
    return 0;
}
